{
  "scripts": {
    "sass": "sass scss/style.scss:css/style.css --style expanded --source-map",
    "sass:watch": "sass scss/style.scss:css/style.css --watch --style expanded --source-map",
    "minify": "cleancss -o css/style.min.css css/style.css",
    "build": "npm-run-all sass minify",
    "dev": "npm run sass:watch"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "sass": "^1.69.5",
    "node-sass": "^9.0.0",
    "npm-run-all": "^4.1.5"
  }
}
